<div class="container">
  <h1 class="heading">Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td class="t-content">
          <%= book.title %>
        </td>
        <td class="t-content">
          <%= book.body %>
        </td>
        <td class="t-content">
          <ul>
            <li>
              <%= link_to "Show", book_path(book) %>
            </li>
            <li>
              <%= link_to "Edit", edit_book_path(book) %>
            </li>
            <li>
              <%= link_to "Destroy", book_path(book), method: :delete %>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div class="container">
  <h2 class="heading">New book</h2>
  <% if @book.errors.any? %>
    <% @book.errors.full_message.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model: @book, local:true do |f| %>
    <div class="content">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="content">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="content">
      <%= f.submit "Create book" %>
    </div>
  <% end %>
</div>