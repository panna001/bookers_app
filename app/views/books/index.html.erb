<div class="container">
  <h1 class="heading">Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book), class: "link" %>
          <%= link_to "Edit", edit_book_path(book), class: "link" %>
          <%= link_to "Destroy", book_path(book), method: :delete, data:{confirm: "Are you sure?" },class: "link" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div class="container">
  <h2 class="heading">New book</h2>

  <%= form_with model: @book, local:true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="content">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="content">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="content">
      <%= f.submit "Create book" %>
    </div>
  <% end %>
</div>